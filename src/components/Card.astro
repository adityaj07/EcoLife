---
const {title, body, dark = false} = Astro.props;
---

<div class={`card ${dark && "dark"}`}>
    <h3>{title}</h3>
    <p>{body}</p>
  </div>

<style>
    .card{
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        margin-bottom: 20px;
        transition: all .3s ease-in-out;
       

    }

    .card:hover{
        background-image: linear-gradient(163deg, #00ff75 0%, #00ff9d 100%);
        border-radius: 15px;
    }

    .dark{
        background-color: var(--color-primary);
        color: #fff;
    }
</style>